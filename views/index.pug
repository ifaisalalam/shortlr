extends layout

block vars
  - var _recaptchaKey = recaptchaKey
  - var _recaptchaKeyJSUrl = "https://www.google.com/recaptcha/api.js?render=" + recaptchaKey

block content
  nav(class='white nav z-depth-0')
    div(class='nav-wrapper' style='padding: 0 20px')
      a(href='/' class='brand-logo')= 'shortlr.com'

